<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
<xs:element name="books">
    <xs:complexType>
        <xs:sequence>
            <xs:element name = "book" minOccurs="4" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element type="xs:String" name="title"/>
                        <xs:element type="xs:String" name="author"/>
                        <xs:element type="xs:String" name="category"/>
                        <xs:element type="xs:String" name="abstract"/>
                        <xs:element type="xs:String" name="username"/>
                        <xs:element type="xs:int" name="id"/>
                        <xs:element type="xs:int" name="isbn"/>
                        <xs:element type="xs:int" name="edition"/>
                        <xs:element type="xs:int" name="year"/>
                        <xs:element type="xs:String" name="publishername"/>
                        <xs:element type="xs:String" name="condition"/>
                        <xs:element type="xs:String" name="availability"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:element>
</xs:schema>
